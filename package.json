{
  "name": "dprint-mono-repo",
  "private": true,
  "description": "A plugable and configurable code formatter.",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean",
    "test": "lerna run test",
    "format": "node packages/dprint/dist/cli-bin.js",
    "build-website": "rimraf build-website && mkdir build-website && mkdir \"build-website/playground\" && copyfiles -u 3 \"packages/playground/build/**/*.*\" \"build-website/playground\" && copyfiles -u 1 \"website/**/*.*\" \"build-website\" && node scripts/build-homepage.js",
    "to-local-source": "node scripts/to-local-source.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dsherret/dprint.git"
  },
  "keywords": [
    "code",
    "formatter",
    "typescript",
    "jsonc"
  ],
  "author": "David Sherret",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dsherret/dprint/issues"
  },
  "homepage": "https://github.com/dsherret/dprint#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/clean-css": "^4.2.1",
    "@types/highlight.js": "^9.12.3",
    "@types/html-minifier": "^3.5.3",
    "@types/showdown": "^1.9.3",
    "clean-css": "^4.2.3",
    "copyfiles": "^2.2.0",
    "highlight.js": "^9.18.1",
    "html-minifier": "^4.0.0",
    "lerna": "^3.20.2",
    "rimraf": "^3.0.2",
    "showdown": "^1.9.1",
    "ts-morph": "^7.0.0"
  }
}
